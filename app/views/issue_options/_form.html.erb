<% form_for @issue_option, :active_issue=>@issue.id do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.hidden_field :issue_id, :value=>@issue.id %>
  </p>
  <p>
    <%= f.label "Add Option:" %>:
    <%= f.text_field :option %>
  </p>
  <%= f.submit %> | <%= link_to "Back to Issues", issues_path(:case_study=>@issue.case_study_id) %>

<% end %>
