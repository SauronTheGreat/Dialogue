<h2>Email Scorecard</h2>
<%=button_to "Edit it", new_scoreq_path(:active_game=>@active_game.id), :style=>"width:100px;height:35px;font-size: 14px;"%>
<br/>


<% @scoreqs = Scoreq.all(:conditions=>['player_id=?',@player.id]) %>

<div style="height:200px;overflow-y:scroll;" >
  <table>
    <% @scoreqs.each do |scoreq| %>
      <tr>
        <td><%= scoreq.student_group_metric.name %></td>
        <td><%= scoreq.value %></td>
      </tr>
    <% end %>
  </table>
  <br/>
</div>
<br/>