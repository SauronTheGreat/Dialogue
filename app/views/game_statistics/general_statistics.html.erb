<center><h2>Displaying data for Game  <%= @active_game.id %></h2></center>

<div class="container" style="border: none">
  <div class="sub_container_base" style="border: none">
    <table>
      <tr>
        <th>Type</th>
        <th>Minimum</th>
        <th>Maximum</th>
        <th>Average</th>

      </tr>
      <% if @scorelist > 0  %>
      <tr>
        <td>Scoring</td>
        <td><%= @min_score %></td>
        <td><%= @max_score %></td>
        <td><%= @avg_score %></td>
      </tr>

          <% else %>

      <tr>
        <td>Agreement</td>
        <td><%= @min_agreement_value %></td>
        <td><%= @max_agreement_value %></td>
        <td><%= @avg_agreement_value %></td>
      </tr>
          <% end %>
    </table>
    <br>



    Total Number of Games : <%= @games.count %><br>
    <% if @scorelist > 0 %>
    Total Score Games : <%= @scorelist %> <br>
        <% else %>

    Total Agreement Games : <%= @agreementlist %><br>
        <% end %>

  </div>
</div>


