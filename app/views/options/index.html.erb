<div class="container">
  <div class="sub_container_base">


    <h1>Listing options</h1>

    <table>
      <tr>
        <th>Name</th>
        <th>Question</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>

      <% @options.each do |option| %>
          <tr>
            <td><%= option.name %></td>
            <td><%= option.question_id %></td>
            <td><%= link_to 'Show', option %></td>
            <td><%= link_to 'Edit', edit_option_path(option) %></td>
            <td><%= link_to 'Destroy', option, :confirm => 'Are you sure?', :method => :delete ,:qid=>option.question_id%></td>
          </tr>
      <% end %>
    </table>

    <br/>


  <%if @options.count !=@no_of_options %>
        <%= link_to 'New Option', new_option_path(:qid=>@question.id) %>
       <% end %>

  </div>

</div>