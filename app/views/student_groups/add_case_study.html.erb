<div id="login_box" class="splash_container">

  <h2>Choose Case Study for <%=@student_group.name%></h2>

  <% form_for @student_group do |f| %>
    <%= f.error_messages %>
    <p>
      <%= f.label :case_study %>:
    <p>
    </p>
    <%= f.select :case_study_id, CaseStudy.all.collect{|s| [s.name,s.id]} %>
  </p>
  <p><%= f.submit %></p>

  <i>If you change the case study after creating games, please remember to re-create the games to apply the changes.</i>

<% end %>

<p><%= link_to "Cancel", @student_group %></p>
</div>